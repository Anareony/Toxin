include ../field/field 

mixin dropdown({title,variables})
    .dropdown
        h3.dropdown__title=title
        case variables
            when "rooms"
                .iqdropdown.rooms
                    p.iqdropdown-selection Удобства
                    .iqdropdown-menu
                        .iqdropdown-menu-option(data-id="1")
                            .iqdropdown-content
                                p.iqdropdown-item Спальни
                        .iqdropdown-menu-option(data-id="2")
                            .iqdropdown-content
                                p.iqdropdown-item Кровати
                        .iqdropdown-menu-option(data-id="3")
                            .iqdropdown-content
                                p.iqdropdown-item Ванные Комнаты

            when "guests"
                .guests.iqdropdown
                    p.iqdropdown-selection Сколько гостей
                    .iqdropdown-menu
                        .iqdropdown-menu-option(date-id="item1")
                            .iqdropdown-content
                                p.iqdropdown-item Взрослые
                        .iqdropdown-menu-option(data-id="item2")
                            .iqdropdown-content
                                p.iqdropdown-item Дети
                        .iqdropdown-menu-option(data-id="item3")
                            .iqdropdown-content
                                p.iqdropdown-item Младенцы
                        button(class="iqdropdown-menu-close") Применить


        
        

