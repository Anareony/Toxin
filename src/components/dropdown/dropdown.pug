mixin dropdown({title})
    h3.title=title
    .no-config.iqdropdown
        p.iqdropdown-selection
        .iqdropdown-menu
            <div class="iqdropdown-menu-option" data-id="item1">
                .div
                    p.iqdropdown-item Спальни
            </div>
            <div class="iqdropdown-menu-option" data-id="item2">
                .div
                    p.iqdropdown-item Кровати
            </div>
            <div class="iqdropdown-menu-option" data-id="item3">
                .div
                    p.iqdropdown-item Комнаты
            </div>
            .iqdropdown-menu-close Применить

