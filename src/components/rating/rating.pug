mixin rating({title})
    h3.title=title
    .rating
        input.rating__input(type="radio" name="rating" id="star1")
        label(for="star1")
        input.rating__input(type="radio" name="rating" id="star2")
        label(for="star2")
        input.rating__input(type="radio" name="rating" id="star3")
        label(for="star3")
        input.rating__input(type="radio" name="rating" id="star4")
        label(for="star4")
        input.rating__input(type="radio" name="rating" id="star5")
        label(for="star5")