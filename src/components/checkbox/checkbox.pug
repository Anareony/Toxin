mixin checkbox({theme,label,description,checked})
    case theme
        default
            .checkbox
                label.checkbox__label=label
                    input.checkbox__input(type="checkbox" checked=checked)
                    
        when "rich"
            .checkbox.checkbox__rich
                label.checkbox__label_rich=label
                    input.checkbox__input(type="checkbox" checked=checked)
                    p.checkbox__description=description
