include ../rate/rate

mixin room-info({url,value,cost,value1,rate,lux})
    .room-info
        .room-info__move
            figure.room-info__img-container
                img.room-info__img(src=url)
            .room-info__buttons
                button.room-info__fogging.room-info__fogging_left
                    span.room-info__button_left.material-icons expand_more
                button.room-info__fogging.room-info__fogging_right
                    span.room-info__button_right.material-icons expand_more
                .room-info__radio-buttons 
                    button.room-info__button(name="radio")
                    button.room-info__button(name="radio")
                    button.room-info__button(name="radio")
                    button.room-info__button(name="radio")
        .room-info__container
            .room-info__title
                .room-info__number
                    span.room-info__number_icon №
                    span.room-info__number_value=value
                    if lux
                        span.room-info__number_text люкс
                .room-info__price
                    span.room-info__price_cost=cost
                    span.room-info__price_date в сутки
            .room-info__stats
                .room-info___rating
                    +rate({rate})
                p.room-info__total-reviews
                    span.room-info__value=value1
                    span.room-info__text Отзывов