                        },
                        {
                        title:"О нас",
                        items: [
                            {text:"О сервисе"},
                            {text:"Наша команда"},
                            {text:"Вакансии"},
                            {text:"Инвесторы"}
                            ]
                        },
                        {
                        title:"Служба поддержки",
                        items: [
                            {text:"Соглашения"},
                            {text:"Сообщество"},
                            {text:"Связь с нами"}
                            ]
                        }
