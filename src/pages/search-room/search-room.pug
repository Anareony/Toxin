                        +room-info({url:"/pages/search-room/img/2.jpg",value:"840",cost:"9 990₽",value1:"65",rate:4})
                        +room-info({url:"/pages/search-room/img/3.jpg",value:"980",cost:"8 500₽",value1:"35",rate:3,lux:true})
                        +room-info({url:"/pages/search-room/img/4.jpg",value:"856",cost:"7 300₽",value1:"19",rate:5})
                        +room-info({url:"/pages/search-room/img/5.jpg",value:"740",cost:"6 000₽",value1:"44",rate:4})
                        +room-info({url:"/pages/search-room/img/6.jpg",value:"982",cost:"5 800₽",value1:"56",rate:3})
                        +room-info({url:"/pages/search-room/img/7.jpg",value:"678",cost:"5 500₽",value1:"45",rate:5})
